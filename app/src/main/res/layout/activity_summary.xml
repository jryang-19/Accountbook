<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/pivot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="SUMMARY"
        android:fontFamily="@font/jalnanfont"
        android:textColor="#000000"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/pivot"
        android:layout_alignParentLeft="true"
        >
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/jalnanfont"
            android:text="date"
            android:layout_marginBottom="5dp"
            />
        <org.eazegraph.lib.charts.PieChart
            android:id="@+id/tab1_chart_1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:fontFamily="@font/jalnanfont"
            app:egEnableScroll="true"
            app:egFixedBarWidth="true"
            app:egLegendHeight="40dp"
            app:egShowDecimal="true"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/pivot"
        android:layout_alignParentRight="true"
        >
        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/jalnanfont"
            android:text="month"
            android:layout_marginBottom="5dp"
            />
        <org.eazegraph.lib.charts.PieChart
            android:id="@+id/tab1_chart_2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:fontFamily="@font/jalnanfont"
            app:egEnableScroll="true"
            app:egFixedBarWidth="true"
            app:egLegendHeight="40dp"
            app:egShowDecimal="true"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="250dp"
            android:orientation="vertical"
            android:layout_below="@+id/pivot"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Monthly expense"
                android:fontFamily="@font/jalnanfont"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />
            <org.eazegraph.lib.charts.BarChart
                android:padding="10dp"
                android:id="@+id/tab1_chart_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jalnanfont"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                app:egEnableScroll="true"
                app:egFixedBarWidth="true"
                app:egLegendHeight="40dp"
                app:egShowDecimal="true"
                />
        </LinearLayout>

</RelativeLayout>